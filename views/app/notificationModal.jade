
#notificationModal.modal.fade(role='dialog')
  .modal-dialog(role='document')
    .modal-content
      .modal-header
        h5#notificationModalLabel.modal-title New message
        button.close(type='button', data-dismiss='modal', aria-label='Close')
          span(aria-hidden='true') Ã—
      .modal-body
        form
          .form-group
            label.col-form-label(for='notification_receive_realname') Recipient:
            input#adminId(type="hidden")
            select#notification_receive_realname.form-control.select2(name="notification_receive_realname",multiple="multiple",style="width: 100%;")
          .form-group
            label.col-form-label(for='message-text') Content:
            textarea#content_text.form-control
      .modal-footer
        button.btn.btn-secondary(type='button', data-dismiss='modal') Close
        button.btn.btn-primary(type='button' onclick="send_notification()") Send message
