extends ../layout-blank

block content
    //- .container
        .row
            .register
                form(action='', method='post')
                    h2 注册
                    .form-group
                        label 用户名
                        input.form-control(name='username')
                    .form-group
                        label 密码
                        input.form-control(type='password', name='password')
                    .form-group
                        label 姓名
                        input.form-control(name='name')
                    .form-group
                        label Email
                        input.form-control(name='email')
                    input(type='hidden', name='_csrf', value='#{token}')
                    button.btn.btn-primary(type='submit') 提交
                    | 
                    a(href='#{adminDir}/user/login') 登录
    section#login-container
        .row
            #login-wrapper.col-md-3
                .panel.panel-primary
                    .panel-heading
                        h3.panel-title
                            | 注册
                    .panel-body
                        p
                            | 已经是用户? 
                            a(href='pages-login.html')
                                strong 登录
                        form(role='form', action='', method='post')
                            .form-group
                                label(for='R_nick') *用户名
                                input#R_nick.form-control(type='text', name='nick', placeholder='请输入用户名', autofocus)
                            .form-group
                                label(for='R_realnaem') *姓名
                                input#R_realname.form-control(type="text", name='realname',placeholder='请输入真实姓名', autofocus)
                            .form-group
                                label(for='R_password') *密码
                                input#R_password.form-control(type='password', name='password', placeholder='请输入密码')
                            .form-group
                                label(for='R_repassword') *密码重复
                                input#R_repassword.form-control(type='password', name='repassword', placeholder='请输入Email')
                            input(type='hidden', name='_csrf', value='#{token}')
                            button.btn.btn-primary.btn-block(type='submit') 注册

